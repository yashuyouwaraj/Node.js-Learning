datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}
// this file will be used for any model that you want to create this project

model Book {
  id Int @id @default(autoincrement())
  title String
  publishedDate DateTime
  author Author @relation(fields: [authorId], references: [id], onDelete: Cascade )
  authorId Int
}

model Author{
  id Int @id @default(autoincrement())
  name String
  books Book[]
}
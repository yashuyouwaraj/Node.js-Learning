generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -> users can register and login, once login  happens jwt, jwtguard
// -> destination module -> auth users 

model User {
  id           Int           @id @default(autoincrement())
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  destinations Destination[]
}

model Destination {
  id         Int       @id @default(autoincrement())
  name       String
  travelDate DateTime?
  notes      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  userId     Int
  user       User      @relation(fields: [userId], references: [id])
}
